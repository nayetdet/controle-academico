{
  "info": {
    "name": "Controle Acadêmico API",
    "description": "Coleção Postman gerada a partir dos controllers REST do projeto controle-academico.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
